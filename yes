<!-- Calendly embed -->
<script src="https://assets.calendly.com/assets/external/widget.js" async></script>
<script>
const calendlyEmbed = document.getElementById('calendlyEmbed');
const btn15 = document.getElementById('btn15');
const btn60 = document.getElementById('btn60');

function loadCalendly(url) {
  calendlyEmbed.innerHTML = '<div class="calendly-inline-widget" data-url="' + url + '" style="min-width:320px;height:700px;"></div>';
}

// Default: 15-min
loadCalendly("https://calendly.com/matthew-waberski777/15-minute-new-meeting");

btn15.addEventListener('click', () => loadCalendly("https://calendly.com/matthew-waberski777/15-minute-new-meeting"));
btn60.addEventListener('click', () => loadCalendly("https://calendly.com/matthew-waberski777/new-meeting"));
</script>

